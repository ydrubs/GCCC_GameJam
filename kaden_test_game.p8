--player

player={
	x=4,
	y=4,
	moved=false,
	
	movement=function(self)
		--[[
		 
		 the function will read
			user input, check for
			obstacles, and move the
			player
			
		]]
				
		if btnp(⬆️) then
			if walls:check(self.x,self.y-1,2) then
				self.y-=1
				self.moved=true
			end
		elseif btnp(⬇️) then
			if walls:check(self.x,self.y+1,2) then
				self.y+=1
				self.moved=true
			end
		elseif btnp(⬅️) then
			if walls:check(self.x-1,self.y,2) then
				self.x-=1
				self.moved=true
			end
		elseif btnp(➡️) then
		 if walls:check(self.x+1,self.y,2) then
				self.x+=1
				self.moved=true
			end
		end
	end,
	
	draw=function(self)
		spr(1, self.x*8, self.y*8)
	end
}
