function _init()
	can_move = true
	enemies={}
	
	for i=1,2 do
		add(enemies,enemy:new({
			x=flr(rnd(10)),
			y=flr(rnd(10))
		}))
	end
end

function _update()

	--[[
		currnetly just checks if for
		movement and if the menu is
		open or not.]]
		
	if can_move then
		player:movement()
		if player.moved == true then
			for enemy in all(enemies) do
				enemy:movement()
			end
			player.moved = false
		end
	elseif not can_move then
